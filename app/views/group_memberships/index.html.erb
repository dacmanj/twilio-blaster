<h1>Listing Group Memberships</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Group</th>
      <th>Contact</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_memberships.each do |group_membership| %>
      <tr>
        <td><%= link_to group_membership.group.name, edit_group_path(group_membership.group) unless group_membership.group.blank? %></td>
        <td><%= link_to group_membership.contact.name, edit_contact_path(group_membership.contact) unless group_membership.contact.blank? %></td>
        <td><%= group_membership.role %></td>
        <td><%= link_to 'Show', group_membership %></td>
        <td><%= link_to 'Edit', edit_group_membership_path(group_membership) %></td>
        <td><%= link_to 'Destroy', group_membership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

