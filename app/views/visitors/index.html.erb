<br>
<%= (link_to 'Send Message', new_message_path, :class => "btn btn-primary") %>
<br>
<% end %>
<% if user_signed_in? %>
<br>
<% if @contact.present? %>
<div class="well">
  <p>
    <b>My Profile</b>
  </p>

  <%= simple_form_for @user do |u| %>
  <%= u.simple_fields_for :contacts do |c| %>
  <%= c.error_notification %>

  <div class="form-inputs">
    <%= c.input :first_name %>
    <%= c.input :last_name %>
    <%= c.input :email %>
    <%= c.input :phone_number %>
  </div>
  <% end %>

  <% end %>


  <div class="form-actions">
    <%= f.button :submit, :value => "Update Contact Info" %>
  </div>
</div>
<% end %>

<%= will_paginate @message_logs %>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>To</th>
        <th>From</th>
        <th>Date</th>
        <th>Message</th>
      </tr>
    </thead>

    <tbody>
      <% @message_logs.each do |message_log| %>
      <tr>
        <td><%= message_log.to_phone_number %></td>
        <td><%= message_log.from_phone_number %></td>
        <td><%= l message_log.date_sent, :format => :shorter %></td>
        <td><%= message_log.message.body unless message_log.message.blank? %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate @message_logs %>

<% end %>
