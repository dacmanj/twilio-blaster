<h1>Messages</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Body</th>
      <th>To</th>
      <th>From</th>
      <th>Date</th>
      <th>Status</th>
      <th>Direction</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= link_to truncate(message.body, length:15), message %></td>
        <td><%= truncate(message.to, length:15) %></td>
        <td><%= message.from %></td>
        <td><%= l message.created_at, format: :short %></td>
        <td><%= message.status %></td>
        <td><%= case message.direction
                  when "incoming"
                    glyph(:cloud_download)
                  when "outgoing"
                    glyph(:cloud_upload)
                end%></td>
        <td><%= link_to glyph(:file), message %>
            <% #link_to glyph(:pencil), edit_message_path(message) %>
            <%= link_to glyph(:trash), message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Send Message', new_message_path, :class => "btn btn-primary" %>
